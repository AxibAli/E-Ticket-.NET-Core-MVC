@model OnlineTicketManagement.Models.Cinema

@{
    ViewData["Title"]="Removal of Cinamas";
}
<div class="row">
    <div class=" col-md-6 offset-md-2">
  <div class="form-group">
    <label asp-for="Logo"></label>
    <input type="text" class="form-control" asp-for="Logo" id="exampleInputEmail1" aria-describedby="emailHelp" readonly>
  </div>
  <div class="form-group">
    <label asp-for="Name"></label>
    <input type="text" class="form-control" asp-for="Name" id="exampleInputPassword1" readonly>
  </div>
    <div class="form-group">
    <label asp-for="Description"></label>
    <input type="text" class="form-control" asp-for="Description" id="exampleInputPassword1" readonly>
  </div>
  <form asp-action="Delete">
      <div class="form-group">
          <input type="hidden" asp-for="Id" />
          <input type="submit" class="btn btn-danger text-white float-right" value="Delete" /> 
          <a class="btn btn-outline-info" asp-action="Index">Back</a>
      </div>
  </form>  

    </div>

</div>



@section Scripts{
    <script>
        $("#ProfilePictureUrl").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview')
            output.src = $(this).val();
        })
    </script>
}