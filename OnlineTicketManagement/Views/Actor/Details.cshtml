@model OnlineTicketManagement.Models.Actor

@{
    ViewData["Title"]="Actors Info";
}
<div class="row">
    <div class=" col-md-6 offset-md-2">
            <div class="form-group text-center">
                <img id="ProfilePicturePreview" />
            </div>
  <div class="form-group">
    <label asp-for="ProfilePictureUrl"></label>
    <input type="text" class="form-control" asp-for="ProfilePictureUrl" id="exampleInputEmail1" aria-describedby="emailHelp" readonly>
  </div>
  <div class="form-group">
    <label asp-for="FullName"></label>
    <input type="text" class="form-control" asp-for="FullName" id="exampleInputPassword1" readonly>
  </div>
    <div class="form-group">
    <label asp-for="Bio"></label>
    <input type="text" class="form-control" asp-for="Bio" id="exampleInputPassword1" readonly>
  </div>
  <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
  <a class="btn btn-outline-info" asp-action="Index">Back</a>

    </div>

</div>



@section Scripts{
    <script>
        $("#ProfilePictureUrl").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview')
            output.src = $(this).val();
        })
    </script>
}